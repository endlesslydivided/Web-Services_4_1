<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Lab3 Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="head" class="bg-dark py-md-2 head align-items-center justify-content-center shadow">

        <div class="row justify-content-center">
            @Html.ActionLink("Lab3 Application", "Index", "Home", new { area = "" }, new { @class = "col-md-6 d-none d-md-flex  decoration-none col-md-2 align-self-center my-sm-2  my-md-0" })

            <div class="d-flex col-md-2 col-2 align-self-center
          justify-content-center
          my-md-3 my-sm-3">

                @Html.ActionLink("Home", "Index", "Home", new { area = "" },new { @class = "text-black text-decoration-none" })

            </div>

            <div class="d-flex col-md-2 col-2  align-self-center
          justify-content-center
          my-md-3 my-sm-3">

                @Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = "text-black text-decoration-none" })
            </div>

           

        </div>
    </header>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lab3 Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
